{
    "name": "@purinton/wx",
    "type": "module",
    "version": "1.0.0",
    "description": "A Discord weather bot using OpenWeatherMap and OpenAI for real-time, multi-language weather reports and automated scheduling.",
    "main": "wx.mjs",
    "scripts": {
        "start": "node wx.mjs",
        "test": "npx --node-options=\"--experimental-vm-modules --no-warnings\" jest --detectOpenHandles --silent"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/purinton/wx.git"
    },
    "keywords": [
        "discord",
        "weather",
        "openweathermap",
        "openai",
        "bot",
        "multi-language",
        "cron",
        "automation",
        "nodejs",
        "esm"
    ],
    "author": "Russell Purinton <russell@purinton.us>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/purinton/wx/issues"
    },
    "homepage": "https://github.com/purinton/wx#readme",
    "devDependencies": {
        "jest": "^30.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)+(spec|test).[jt]s?(x)",
            "**/?(*.)+(spec|test).mjs",
            "**/?(*.)+(spec|test).cjs"
        ]
    },
    "dependencies": {
        "@purinton/common": "^1.0.16",
        "@purinton/discord": "^1.0.11",
        "@purinton/openai": "^1.0.1",
        "@purinton/openweathermap": "^1.0.4",
        "dotenv": "^16.5.0",
        "node-cron": "^4.1.1"
    }
}
